
@{
    ViewBag.Title = "Module 6 Temp Converter";
}

<h2>@ViewBag.Title</h2>

<form>
    <div class="row">
        <div class="col-md-4">
            Please enter a temperature in Celcius: <input type="number" name="tempInput" />
        </div>
        <div class="col-md-2">
            <input type="submit" value="Calculate Farenhedit" class="btn btn-success" />
        </div>
    </div>
</form>

@if (ViewBag.Temp != null)
{
    <h2>@ViewBag.Temp</h2>
}