    <!-- google fonts -->
    <link href="//fonts.googleapis.com/css?family=Catamaran:100,200,300,400,500,600,700,800,900" rel="stylesheet">
    <link href="//fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i&amp;subset=cyrillic,cyrillic-ext,greek,greek-ext,latin-ext,vietnamese" rel="stylesheet">
    <!-- //google fonts -->
    <!-- Custom CSS -->
    <link href="~/Content/Custom.css" rel="stylesheet" />
</head>
<body>
    <!-- header -->
    <header>
        <div class="container">
            <!-- nav -->
            <nav class="py-3 d-lg-flex">
                <div id="logo">
                    <h1> <a href="@Url.Action("Index", "Home")"><span class="fa fa-line-chart"></span> Board Game Store </a></h1>
                </div>
                <label for="drop" class="toggle"><span class="fa fa-bars"></span></label>
                <input type="checkbox" id="drop" />
                <ul class="menu ml-auto mt-1">
                    <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                    <li><a href="@Url.Action("Index", "Products")">Products</a></li>
                    <li><a href="@Url.Action("Index", "Departments")">Services</a></li>
                    <li><a href="@Url.Action("Index","Employees")">Meet our team</a></li>
                    <li><a href="@Url.Action("Index", "Categories")">Categories</a></li>
                    <li>
                        @if (User.IsInRole("Admin"))
                        {
                            using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                            {
                                @Html.AntiForgeryToken()
                                <a href="javascript:document.getElementById('logoutForm').submit()">Log Off</a>
                            }
                        }
                        else
                        {
                            <a href="@Url.Action("Login", "Account")">Admin Login</a>
                        }

                    </li>
                    <li class="last-grid"><a href="@Url.Action("Contact", "Home")">Contact</a></li>
                    <li>
                        @if (Session["cart"] != null && ((Dictionary<int, StoreFront.UI.MVC.Models.CartItemViewModel>)Session["cart"]).Count > 0
                            )
                        {
                            <a class="dropdown-item" href="@Url.Action("Index", "ShoppingCart")">
                                Cart<i class="fa fa-shopping-cart"></i>
                                @{
                                    Dictionary<int, StoreFront.UI.MVC.Models.CartItemViewModel> cartItems = (Dictionary<int, StoreFront.UI.MVC.Models.CartItemViewModel>)Session["cart"];

                                    int items = 0;

                                    foreach (var item in cartItems)
                                    {
                                        items += item.Value.Qty;
                                    }
                                }
                                @items
                            </a>
                        }
                        else
                        {

                        }
                    </li>
                </ul>
            </nav>
            <!-- //nav -->
        </div>
    </header>
    <!-- //header -->

    @RenderBody()

    <!-- footer -->
    <footer class="footer py-md-5 pt-4 pb-5">
        <div class="container pt-4">
            <div class="row">
                <div class="col-lg-3 col-sm-6 footer-top">
                    <h4 class="mb-sm-4 mb-3 w3f_title">Contact Info</h4>
                    <ul class="list-w3">
                        <li><span class="fa mr-1 fa-map-marker"></span>2130 Made Up Street, San Diego, CA 94117-1080 USA</li>
                        <li class="my-2"><span class="fa mr-1 fa-phone"></span>1-913-555-5678</li>
                        <li class=""><span class="fa mr-1 fa-envelope"></span><a href="#">info@boardgamestore.com</a></li>
                    </ul>
                </div>
                
                <div class="col-lg-2 col-sm-4 mt-lg-0 mt-sm-5 mt-4">
                    <h4 class="mb-4 w3f_title">Other Links</h4>
                    <ul class="list-w3">
                        <li class="my-2">
                            <a href="@Url.Action("Index", "Departments")">
                                Our Services
                            </a>
                        </li>
                        <li class="mb-2">
                            <a href="@Url.Action("Index", "Home")">
                                About Us
                            </a>
                        </li>
                        <li class="my-2">
                            <a href="@Url.Action("Contact", "Home")">
                                Contact Us
                            </a>
                        </li>
                    </ul>
                </div>

            </div>
        </div>
        <!-- //footer bottom -->
    </footer>
    <!-- //footer -->
    <!-- copyright -->
    <section class="copy-right py-4">
        <div class="container">
            <div class="row">
                <div class="col-lg-7">
                    <p class="">
                        © 2019 Demand. All rights reserved | Design by
                        <a href="http://w3layouts.com"> W3layouts.</a>
                    </p>
                </div>
                <div class="col-lg-5">
                    <ul class="list-w3 d-sm-flex">
                        @*<li>
                                <a href="#">
                                    Privicy Policy
                                </a>
                            </li>
                            <li class="mx-4">
                                <a href="#">
                                    Terms & Conditions
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    Disclaimer.
                                </a>
                            </li>*@
                        <li>
                            <a href="#">
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
    <!-- //copyright -->
    <!-- move top -->
    <div class="move-top text-right">
        <a href="#home" class="move-top">
            <span class="fa fa-angle-up  mb-3" aria-hidden="true"></span>
        </a>
    </div>
    <!-- move top -->
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    <!--ADDEDjQuery UI CDN-->
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

    <!-- ADDED jQuery Ajax CDN-->
