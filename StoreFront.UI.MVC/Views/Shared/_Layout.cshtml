addEventListener("load", function () {
            setTimeout(hideURLbar, 0);
        }, false);

        function hideURLbar() {
            window.scrollTo(0, 1);
        }</script>

    <!-- css files -->
    <link href="~/Content/css/css_slider.css" rel="stylesheet"><!-- Slider css -->
    <link href="~/Content/css/bootstrap.css" rel='stylesheet' type='text/css' /><!-- bootstrap css -->
    <link href="~/Content/css/style.css" rel='stylesheet' type='text/css' /><!-- custom css -->
    <link href="~/Content/css/font-awesome.min.css" rel="stylesheet"><!-- fontawesome css -->
